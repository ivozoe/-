<!--pages/home/home.wxml-->
<!-- 1.事件处理的回顾 -->
<button bindtap="btnclick" size="mini">按钮</button>
<button bind:tap="btnclick" size="mini">按钮</button>
<button catch:tap="btnclick" size="mini">按钮</button>

<!-- 2.常见的一些事件 -->
<view class="view1"
      bind:touchstart="touchstart"
      bind:touchmove="touchmove"
      bind:touchend="touchend"
      bind:tap="tap"
      bind:longpress="longpress">
</view>

<!-- 3.对事件对象的分析 -->
<button size="mini"
        bindtap="btntouchevent">
        按钮
</button>

<!-- 4.事件的传递参数 -->
<view class="content">
    <block wx:for="{{titles}}" wx:key="index">
        <view class="item"
              bindtap="itemclick"
              data-index="{{index}}"
              data-item="{{item}}">
              {{item}}
        </view>
    </block>
</view>

<!-- 5.事件冒泡和事件捕获 -->
<view class="view1" capture-bind:tap="captureview1" bindtap="bindview1">
    <view class="view2" capture-bind:tap="captureview2" catchtap="bindview2">
        <view class="view3" capture-bind:tap="captureview3" bindtap="bindview3"></view>
    </view>
</view>